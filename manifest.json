{
    "manifest_version": 2,
    "name": "newnews",
    "description": "Helping you stay mindful on the internet",
    "version": "5.0.0",
    "icons":{"128": "icon_newnews.png", "48": "icon_newnews_48.png", "16": "icon_newnews_16.png"},

    "browser_action":{
        "default_icon": "icon_newnews.png",
        "default_popup": "sidebar.html",
        "default_title": "Activate newNews"
    },

    "background": {
        "scripts": ["background.js", "jquery-3.5.1.min.js"],
        "persistent": true
      },

    "permissions": [
        "activeTab",
        "tabs",
        "http://www.google.com/",
        "https://language.googleapis.com/",
        "notifications",
        "storage"
    ],
   

    "content_scripts": [
        {
            "matches": [
                "*://*.bbc.co.uk/" 
            ],

            "js": ["inject.js"] 
        }
    ],

    

    "content_security_policy": "script-src 'self' https://access.alchemyapi.com/calls/url/URLGetRankedNamedEntities; object-src 'self'"

   
}