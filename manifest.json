{
    "manifest_version": 2,
    "name": "newnews",
    "description": "Helping you stay mindful on the internet",
    "version": "4.0.0",
    "icons":{"128": "icon_newnews.png", "48": "icon_newnews_active.png"},
    "browser_action":{
        "default_icon": "icon_newnews.png",
        "default_popup": "sidebar.html",
        "default_title": "Activate newNews"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": true
      },

    "permissions": [
        "activeTab",
        "tabs",
        "http://www.google.com/",
        "https://language.googleapis.com/",
        "storage"],
   

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],

            "js": ["sidebar.js", "sentiment.js", "inject.js", "redder.js", "visualize.js"]

            
        }
    ],

    "content_security_policy": "script-src 'self' https://access.alchemyapi.com/calls/url/URLGetRankedNamedEntities; object-src 'self'"

   
}